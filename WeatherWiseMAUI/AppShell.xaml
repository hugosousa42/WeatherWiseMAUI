<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="WeatherWiseMAUI.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:WeatherWiseMAUI.Pages"
       Shell.FlyoutBehavior="Disabled"
       Shell.TabBarBackgroundColor="#A8D8B9"
       Shell.TabBarTitleColor="#3B5A2A"
       Shell.TabBarUnselectedColor="#FFFFFF">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent
                ContentTemplate="{DataTemplate pages:HomePage}" />
        </Tab>

        <Tab Title="Perfil" Icon="profile.png">
            <ShellContent
                ContentTemplate="{DataTemplate pages:PerfilPage}" />
        </Tab>
    </TabBar>

</Shell>
